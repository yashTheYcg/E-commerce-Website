<body>
    <header>
        <div class="container">
            <div id="branding">
                <h1><span class="highlight">E-Commerce</span> Website</h1>
            </div>
        </div>
    </header>

<div class="alert alert-danger" role="alert">
  Sorry, this <strong>Email</strong> has already exist !
</div>

<section id="form">
    <div class="container">
        <form class="form" action="/signup" method="post">
            <label for="person">Sign-Up as:</label><br>
            <input type="text" id="person" name="person"><br>
            <label for="fname">First name:</label><br>
            <input type="text" id="fname" name="fname"><br>
            <label for="lname">Last name:</label><br>
            <input type="text" id="lname" name="lname"><br>
            <label for="street_name">Street Name:</label><br>
            <input type="text" id="street_name" name="street_name"><br>
            <label for="street_number">Street Number:</label><br>
            <input type="text" id="street_number" name="street_number"><br>
            <label for="city">City:</label><br>
            <input type="text" id="city" name="city"><br>
            <label for="pincode">Pincode:</label><br>
            <input type="text" id="pincode" name="pincode"><br>
            <label for="state">State:</label><br>
            <input type="text" id="state" name="state"><br>
            <label for="phone_number">Phone Number:</label><br>
            <input type="tel" id="phone_number" name="phone_number" ><br>
            <!-- pattern="[0-9]{3}-[0-9]{2}-[0-9]{3}" -->
            <label for="email">E-mail:</label><br>
            <input type="text" id="email" name="email"><br>
            <label for="account_id">Account ID:</label><br>
            <input type="text" id="account_id" name="account_id"><br>
            <label for="password">Password:</label><br>
            <input type="password" id="password" name="password"><br>

            <input type="submit" name="Create" placeholder="Create"class="btn btn-warning">
            <a class="btn btn-outline-secondary" href="/login">Already have an account</a>
        </form>
    </div>
</section>



