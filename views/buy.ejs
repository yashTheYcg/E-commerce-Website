<% if(person === "customer"){ %>
  <%- include('header0'); -%>
<% } else { %>
  <%- include('sellerHeader'); -%>
<% } %>

<section class="h-100" style="background-color: #eee;">
  <div class="container h-100 py-5">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-10">

      <form action="/buy" method="post">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h3 class="fw-normal mb-0 text-black">Shopping Cart</h3>
        </div>

        <div class="card rounded-3 mb-4">
          <div class="card-body p-4">
            <div class="row d-flex justify-content-between align-items-center">



                <div class="col-md-2 col-lg-2 col-xl-2">
                  <img
                    src="./images/demo profile photo.png"
                    class="img-fluid rounded-3" alt="Cotton T-shirt">
                </div>
                <div class="col-md-3 col-lg-3 col-xl-3">
                  <p class="lead fw-normal mb-2"> <%=item[0].item_name%></p>
                  <p class="text-muted"> Size: <%=item[0].size %>  Color: <%=item[0].color %> </p>
                </div>
                <div class="col-md-3 col-lg-3 col-xl-2">
                  <p class="lead fw-normal mb-2"> Quantity</p>
                  <input class="text-muted"type="number"   name="quantity" value="1" min="1" max=<%=item[0].stock_quantity%>>
                </div>
                <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                  <p class="lead fw-normal mb-2"> Price</p>
                  <p class="text-muted"> Rs. <%=item[0].price%></p>
                </div>
                <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                  <a href="#!" class="text-danger"><i class="fas fa-trash fa-lg"></i></a>
                </div>
            </div>
          </div>
        </div>



        <div class="card">
          <div class="card-body">
            <button type="submit" class="btn btn-warning btn-block btn-lg" name="id" value="<%= item[0].item_id%>">Proceed to Pay</button>
          </div>
        </div>

      </form>
      </div>
    </div>
  </div>
</section>
